
SCRIPTS = ['#scripts/graph/__init__.py',
           '#scripts/graph/ROC.py']

c = Command(['roc-perfect.pdf',
         'roc-simple.pdf',
         'explain.tex'],
         'run.py',
         'PYTHONPATH=$PYTHONPATH DISPLAY=:0.0 python $SOURCE.abspath',
         PYTHONPATH=Dir('#scripts').abspath,
         chdir=1)

Depends(c, SCRIPTS)
Depends(c, ['explain.py',
            'ontology.py',
            'default_knowledge-semmap.xml',
            'defaultprobs-semmap.txt'])
